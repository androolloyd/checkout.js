.crowdstart-loader
  margin-top: 10px
  width: 16px
  font-size: 10px
  position: relative
  text-indent: -9999em
  transform: translateZ(0)
  animation: load8 1.1s infinite linear

.crowdstart-loader
.crowdstart-loader:after
  border-radius: 50%
  width: 10em
  height: 10em
  margin-top: 10px

@keyframes load8 {
  0% {
    transform: rotate(0deg)
  }
  100% {
    transform: rotate(360deg)
  }
}

.crowdstart-button
  .crowdstart-loader
    height: 3em
    width: 3em
    border-width: .5em
    float: left
    top: .33em
    left: .33em
    margin: 0
    position: absolute

