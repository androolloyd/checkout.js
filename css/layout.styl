@lost gutter 1em

.crowdstart-checkout
  width: 400px
  margin-left: -200px

  .crowdstart-full-width
    margin: 0 -1em

    & > *
      margin-left: 1em

  .crowdstart-card-expiry-cvc
  .crowdstart-shipping-address-line
  .crowdstart-shipping-state-postal
    display: table
    width: 100%

    & > control
      column: 1/2

  .crowdstart-totals > *
    display: table
    width: 100%

    & > :nth-child(1)
      column: 4/5

    & > :nth-child(2)
      column: 1/5

  promo .crowdstart-form-control
    display: table
    width: 100%

    & > *
      column: 1/4
    & > :nth-child(1)
      column: 1/2

  .crowdstart-line-item
    div
      column: 1/5
    div:nth-of-type(2)
      column: 2/5

  +above(650px)
    width: 600px
    margin-left: -300px

    .crowdstart-column:last-of-type
      position: relative
      z-index: 2000

    &:not(.crowdstart-narrow)
      .crowdstart-row
        display: table
        width: 100%

      & > .crowdstart-row
        .crowdstart-column
          column: 1/2

  +below(650px)
    .crowdstart-card-widget
      display: table
      width: 100%

      & > .crowdstart-card-details
      & > .crowdstart-card
        column: 1/2
