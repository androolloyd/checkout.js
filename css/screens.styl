/* SCREENS */

screen-manager
  padding: .6em 0em
  display: block
  width: 100%
  box-sizing:border-box
  line-height:1.5em
  left: -1em
  position: relative
  transition: all 0.5s ease-in-out

  .crowdstart-screens
    width: 100%
    display: table

    .crowdstart-screen-strip
      display: table

      transition: all .4s ease-in-out

      z-index: 1000
      position: relative

      > *
        padding: 0 1em
        display: inline-block
        position: relative
        box-sizing: border-box
        vertical-align: top

        > *
          transition: all 0.5s ease-in-out

/* END SCREENS */
